@using System.IO
@using Samr.ERP.Core.Services
@using Samr.ERP.Core.ViewModels.Employee
@model GetEmployeeViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee @Model.FullName</title>
    @*<link rel="stylesheet" href="@Url.Content("~/css/invoice-report.css")" />*@
</head>
<body>
<div class="card">
    <img src="@Model.PhotoPath" style="width:100%">
    <p class="title">Emloyee Card example</p>
    <h1>@Model.FullName</h1>
    <p class="title">@Model.Department, @Model.Position</p>
    <p>@Model.DateOfBirth</p>
    <p>@Model.Description</p>
</div>
</body>
</html>

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
    }

    .title {
        color: grey;
        font-size: 18px;
    }

    button {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    a {
        text-decoration: none;
        font-size: 22px;
        color: black;
    }

    button:hover, a:hover {
        opacity: 0.7;
    }
</style>